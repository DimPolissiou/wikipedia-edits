\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#FA8072;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n|-\n! Danielle\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#F3F781;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#FA8072;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n|-\n! Charlie\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#F3F781;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#FA8072;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n|-\n! Sophie\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#F3F781;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#A9D8F5;\"|\n| \n|-\n! Tiffany\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#BDBDBD;\"|\n| style=\"background:#F3F781;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#A9D8F5;\"|\n| style=\"background:#FA8072;\