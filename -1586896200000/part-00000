ook |last=Orosius |first=Paulus |author-link=Paulus Orosius |year=1773 |chapter= |editor-last= |editor-first= |editor-link= |title=The Anglo-Saxon Version From The Historian Orosius |url=https://books.google.com/?id=aT0JAAAAQAAJ |series= |language= |volume= |edition= |location= |publisher=[[John Bowyer Nichols]] |page= |pages= |isbn= |archive-url= |archive-date= |access-date= |via= |quote= |ref=harv}}\n* {{cite book |last=Pliny |author-link=Pliny the Elder |translator-last1=Bostock |translator-first1=John |translator-link1= |year=1855 |chapter= |editor-last= |editor-first= |editor-link= |title=The Natural History |url=http://www.perseus.tufts.edu/hopper/text?doc=Plin.+Nat.+toc |series= |language= |volume= |edition= |location= |publisher=[[Taylor & Francis]] |page= |pages= |isbn= |archive-url= |archive-date= |access-date= |via= |quote= |ref=harv}}\n* {{cite book |last=Procopius |author-link=Procopius |translator-last1=Dewing |translator-first1=Henry Bronson |translator-link1= |year=1914 |chapter= |editor-last= |editor-first= |editor-link= |title=History of the Wars |url=https://en.wikisource.org/wiki/History_of_the_Wars |series= |language= |volume= |edition= |location= |publisher=[[Heinemann (publisher)|Heinemann]] |page= |pages= |isbn= |archive-url= |archive-date= |access-date= |via= |quote= |ref=harv}}\n* {{cite book |last=Ptolemy |author-link=Ptolemy |translator-last1= |translator-first1= |translator-link1= |year=1932 |chapter= |editor-last= |editor-first= |editor-link= |title=Geography |url=http://penelope.uchicago.edu/Thayer/E/Gazetteer/Periods/Roman/_Texts/Ptolemy/home.html |series= |language= |volume= |edition= |location= |publisher=[[New York Public Library]] |page= |pages= |isbn= |archive-url= |archive-date= |access-date= |via= |quote= |ref=harv}}\n* {{cite book |last=Strabo |author-link=Strabo |translator-last1=Hamilton |translator-first1=H. C. |translator-link1= |translator-last2=Falconer |translator-first2=W. |translator-link2= |year=1903 |chapter= |editor-last= |editor-first= |editor-link= |title=The Natural History |url=http://www.perseus.tufts.edu/hopper/text?doc=Perseus%3Atext%3A1999.01.0239%3Abook%3Dnotice |series= |language= |volume= |edition= |location= |publisher=[[George Bell & Sons]] |page= |pages= |isbn= |archive-url= |archive-date= |access-date= |via= |quote= |ref=harv}}\n* {{cite book |last=Syncellus |first=George |author-link=George Syncellus |year=1829 |chapter= |editor-last=Dindorf |editor-first=Karl Wilhelm |editor-link=Karl Wilhelm Dindorf |title=Chronographia |url= |series=[[Corpus Scriptorum Historiae Byzantinae]] |language=Latin |volume=22-23 |edition= |location= |publisher=[[University of Bonn]] |page= |pages= |isbn= |access-date= |via= |quote= |ref=harv}}\n* {{cite book |last=Tacitus |author-link=Tacitus |translator-last1=Church |translator-first1=Alfred John |translator-link1=Alfred John Church |translator-last2=Brodribb |translator-first2=William Jackson |translator-link2= |year=1876a |chapter= |editor-last= |editor-first= |editor-link= |title=Germania |url=https://en.wikisource.org/wiki/Germania_(Church_%26_Brodribb) |series= |language= |volume= |edition= |location= |publisher= |page= |pages= |isbn= |archive-url= |archive-date= |access-date= |via= |quote= |ref=harv}}\n* {{cite book |last=Tacitus |author-link=Tacitus |translator-last1=Church |translator-first1=Alfred John |translator-link1=Alfred John Church |translator-last2=Brodribb |translator-first2=William Jackson |translator-link2= |year=1876b |chapter= |editor-last= |editor-first= |editor-link= |title=The Annals |url=https://en.wikisource.org/wiki/The_Annals_(Tacitus) |series= |language= |volume= |edition= |location= |publisher= |page= |pages= |isbn= |archive-url= |archive-date= |access-date= |via= |quote= |ref=harv}}\n* {{cite book |last=Zosimus |author-link=Zosimus |translator-last1= |translator-first1= |translator-link1= |year=1814 |chapter= |editor-last= |editor-first= |editor-link= |title=New History |url=https://en.wikisource.or