05|'''5'''}}\n | {{sort|04|'''6'''}}\n | {{sort|03|'''3'''}}\n | {{sort|12|'''14'''}}\n|-\n | align=left | {{flag|Czech Republic}}\n | {{sort|04|'''4'''}}\n | {{sort|01|'''1'''}}\n | {{sort|05|'''5'''}}\n | {{sort|10|'''10'''}}\n|-\n  | align=left | {{flag|Poland}}\n | {{sort|03|'''5'''}}\n | {{sort|04|'''4'''}}\n | {{sort|14|'''15'''}}\n | {{sort|22|'''24'''}}\n|-\n | align=left | {{flag|Austria}}\n | {{sort|02|'''2'''}}\n | {{sort|04|'''4'''}}\n | {{sort|08|'''9'''}}\n | {{sort|14|'''15'''}}\n|-\n | align=left | {{flag|Hungary}}\n | {{sort|02|'''2'''}}\n | {{sort|02|'''3'''}}\n | {{sort|10|'''11'''}}\n | {{sort|14|'''16'''}}\n|-\n | align=left | {{flag|Belarus}}\n | {{sort|01|'''1'''}}\n | {{sort|05|'''5'''}}\n | {{sort|11|'''12'''}}\n | {{sort|17|'''18'''}}\n|-\n | align=left | {{flag|Slovakia}}\n | {{sort|02|'''2'''}}\n | {{sort|04|'''6'''}}\n | {{sort|10|'''10'''}}\n | {{sort|16|'''18'''}}\n|-\n | align=left | {{flag|New Zealand}}\n | {{sort|01|'''1'''}}\n | {{sort|05|'''6'''}}\n | {{sort|04|'''5'''}}\n | {{sort|10|'''12'''}}\n|-\n | align=left | {{flag|Georgia}}\n | {{sort|01|'''1'''}}\n | {{sort|03|'''3'''}}\n | {{sort|08|'''8'''}}\n | {{sort|12|'''12'''}}\n|-\n | align=left | {{flag|Russia}}\n | {{sort|01|'''1'''}}\n | {{sort|03|'''4'''}}\n | {{sort|07|'''7'''}}\n | {{sort|11|'''12'''}}\n|-\n | align=left | {{flag|Australia}}\n | {{sort|01|'''1'''}}\n | {{sort|02|'''2'''}}\n | {{sort|06|'''6'''}}\n | {{sort|09|'''9'''}}\n|-\n | align=left | {{flag|Iran}}\n | {{sort|01|'''1'''}}\n | {{sort|02|'''2'''}}\n | {{sort|00|'''1'''}}\n | {{sort|03|'''4'''}}\n|-\n | align=left | {{flag|Soviet Union}}\n | {{sort|01|'''1'''}}\n | {{sort|02|'''2'''}}\n | {{sort|00|'''0'''}}\n | {{sort|03|'''3'''}}\n|-\n | align=left | {{flag|Switzerland}}\n | {{sort|01|'''2'''}}\n | {{sort|01|'''1'''}}\n | {{sort|04|'''5'''}}\n | {{sort|06|'''8'''}}\n|-\n | align=left | {{flag|Croatia}}\n | {{sort|01|'''1'''}}\n | {{sort|01|'''1'''}}\n | {{sort|03|'''3'''}}\n | {{sort|05|'''5'''}}\n|-\n 