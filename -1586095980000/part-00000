6) Goal difference; 7) Goals scored.\n\n<!--Qualification and relegation column definitions-->\n|res_col_header=PR\n|col_DA=green1 |text_DA= Promotion to [[1940\u201341 Divizia A|Divizia A]]\n|col_R=red1    |text_R= Relegation to [[Liga III|Divizia C]]\n}}\n\n=== Serie IV ===\n{{#invoke:Sports table|main|style=WDL\n|source=[http://www.romaniansoccer.ro/divizia_b/tables/1939_40.shtml romaniansoccer.ro]\n\n<!--Team positions-->\n|team1=FRB |team2=FER |team3=MAC |team4=PRA |team5=DVA |team6=MCH\n|team7=TUR |team8=MUN |team9=SSD |team10=TRA\n\n<!-- Team qualifications here (defined below)-->\n|result1=DA\n|result9=R\n|result10=R\n\n<!--Team results here-->\n|update=complete\n|win_FRB= 15|draw_FRB= 2|loss_FRB= 1|gf_FRB= 69|ga_FRB= 20 <!-- Franco-Rom\u00e2na Br\u0103ila -->\n|win_FER= 13|draw_FER= 3|loss_FER= 2|gf_FER= 65|ga_FER= 16 <!-- Feroemail Ploie\u0219ti -->\n|win_MAC= 12|draw_MAC= 2|loss_MAC= 4|gf_MAC= 58|ga_MAC= 13 <!-- Maccabi Bucure\u0219ti -->\n|win_PRA=  9|draw_PRA= 3|loss_PRA= 6|gf_PRA= 37|ga_PRA= 35 <!-- Prahova Ploie\u0219ti -->\n|win_DVA=  9|draw_DVA= 2|loss_DVA= 7|gf_DVA= 44|ga_DVA= 42 <!-- Dacia VA Gala\u021bi -->\n|win_MCH=  7|draw_MCH= 2|loss_MCH= 9|gf_MCH= 30|ga_MCH= 42 <!-- Maccabi Chi\u0219in\u0103u -->\n|win_TUR=  6|draw_TUR= 3|loss_TUR= 9|gf_TUR= 32|ga_TUR= 33 <!-- Turda Bucure\u0219ti -->\n|win_MUN=  6|draw_MUN= 1|loss_MUN=11|gf_MUN= 26|ga_MUN= 53 <!-- Muncitorul Cern\u0103u\u021bi -->\n|win_SSD=  3|draw_SSD= 0|loss_SSD=15|gf_SSD= 19|ga_SSD= 70 <!-- SS Doc Gala\u021bi -->\n|win_TRA=  1|draw_TRA= 0|loss_TRA=17|gf_TRA=  9|ga_TRA= 65 <!-- Traian Tighina -->\n\n<!--Team definitions (wikilinks in table)-->\n|name_FRB = [[Franco-Rom\u00e2na Br\u0103ila]]\n|name_FER = [[Feroemail Ploie\u0219ti]]\n|name_MAC = [[Maccabi Bucure\u0219ti]]\n|name_PRA = [[Prahova Ploie\u0219ti]]\n|name_DVA = [[Dacia Vasile Alecsandri Gala\u021bi|Dacia VA Gala\u021bi]]\n|name_MCH = [[Maccabi Chi\u0219in\u0103u]]\n|name_TUR = [[Turda Bucure\u0219ti]]\n|name_MUN = [[Muncitorul 