ky | DOB = 1990\u201308\u201313 }}\n{{player2 | num = 30 | first = Stephen | last = Curry | pos = G | ft = 6 | in = 3 | lbs = 190 | college = Davidson | DOB = 1988\u201303\u201314 | note = C }}\n{{player2 | num = 32 | first = Marcus | last = Derrickson | pos = F | ft = 6 | in = 7 | lbs = 249 | college = Georgetown | DOB = 1996\u201302\u201301 | note = TW }}\n{{player2 | num = 35 | first = Kevin | last = Durant | pos = F | ft = 6 | in = 9 | lbs = 240 | college = Texas | DOB = 1988\u201309\u201329 |}}\n{{player2 | num = 10 | first = Jacob | last = Evans | pos = G | ft = 6 | in = 6 | lbs = 210 | college = Cincinnati | DOB = 1997\u201306\u201318 }}\n{{player2 | num = 23 | first = Draymond | last = Green | pos = F | ft = 6 | in = 7 | lbs = 230 | college = Michigan State | DOB = 1990\u201303\u201304 }}\n{{player2 | num = 9 | first = Andre | last = Iguodala | pos = GF | ft = 6 | in = 6 | lbs = 215 | college = Arizona | DOB = 1984\u201301\u201328 }}\n{{player2 | num = 21 | first = Jonas | last = Jerebko | pos = F | ft = 6 | in = 10 | lbs = 231 | from = Sweden | DOB = 1987\u201303\u201302 }}\n{{player2 | num = 15 | first = Damian | last = Jones | dab = basketball | pos = C | ft = 7 | in = 0 | lbs = 245 | college = Vanderbilt | DOB = 1995\u201306\u201330 }}\n{{player2 | num = 1 | first = Damion | last = Lee | pos = G | ft = 6 | in = 6 | lbs = 210 | college = Louisville | DOB = 1992\u201310\u201321 | note = TW }}\n{{player2 | num = 34 | first = Shaun | last = Livingston | pos = G | ft = 6 | in = 7 | lbs = 192 | school = [[Peoria High School (Peoria, Illinois)|Peoria HS (IL)]] | DOB = 1985\u201309\u201311 }}\n{{player2 | num = 5 | first = Kevon | last = Looney | pos = F/C | ft = 6 | in = 9 | lbs = 220 | college = UCLA | DOB = 1996\u201302\u201306 }}\n{{player2 | num = 28 | first = Alfonzo | last = McKinnie | pos = F | ft = 6 | in = 8 | lbs = 215 | college = Green Bay | DOB = 1992\u201309\u201317 }}\n{{player2 | num = 11 | first = Klay | last = Thompson | pos = G | ft = 6 | in =