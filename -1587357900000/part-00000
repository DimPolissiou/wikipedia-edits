 ft = 6 | in = 9 | lbs = 210 | school = North Carolina | DOB = 1951\u201309\u201325}}\n{{player2 | first = Mike | last = McGee | dab = basketball | num = 40 | pos = F | ft = 6 | in = 5 | lbs = 190 | school = Michigan | DOB = 1959\u201307\u201329}}\n{{player2 | first = Steve | last = Mix | num = 50 | pos = F | ft = 6 | in = 7 | lbs = 215 | school = Toledo | DOB = 1947\u201312\u201330}}\n{{player2 | first = Norm | last = Nixon | num = 10 | pos = G | ft = 6 | in = 2 | lbs = 170 | school = Duquesne | DOB = 1955\u201310\u201311}}\n{{player2 | first = Kurt | last = Rambis | num = 31 | pos = F | ft = 6 | in = 8 | lbs = 213 | school = Santa Clara | DOB = 1958\u201302\u201325}}\n{{player2 | first = Jamaal | last = Wilkes | num = 52 | pos = F | ft = 6 | in = 6 | lbs = 190 | school = UCLA | DOB = 1953\u201305\u201302}}\n{{player2 | first = James | last = Worthy | num = 42 | pos = F | ft = 6 | in = 9 | lbs = 225 | school = North Carolina | DOB = 1961\u201302\u201327}}\n<!-- end list of players -->\n{{NBA roster footer\n| head_coach = \n* {{player||USA|[[Pat Riley]]}} ({{college|Kentucky}})\n| asst_coach =\n* {{player||USA|[[Bill Bertka]]}} ({{college|Kent State}})\n* {{player||USA|[[Dave Wohl]]}} ({{college|Pennsylvania}})\n}}\n\n==See also==\n* [[1983 NBA Playoffs]]\n\n==References==\n{{reflist}}\n\n==External links==\n*[https://www.webcitation.org/65cZRcpol?url=http://www.nba.com/history/finals/19821983.html NBA History]\n\n{{NBA Finals}}\n{{Philadelphia 76ers 1982\u201383 NBA champions}}\n{{Philadelphia 76ers}}\n{{Los Angeles Lakers}}\n{{1982\u201383 NBA season by team}}\n{{NBA on CBS}}\n{{NBA on Mutual}}\n\n{{DEFAULTSORT:1983 Nba Finals}}\n[[Category:National Basketball Association Finals]]\n[[Category:1982\u201383 NBA season|Finals]]\n[[Category:Philadelphia 76ers games|NBA]]\n[[Category:Los Angeles Lakers games|NBA]]\n[[Category:1983 in Los Angeles]]\n[[Category:1983 in sports in Pennsylvania]]\n[[Category:1980s in Philadelphia]]\n[[Category:May 1983 sports events in the 