gn=center|3,672\n|align=center|24,017\n|-\n|align=center|24 March 2020<ref name=\"24March\"></ref>\n|align=center|343\n|align=center|1,872 \n|align=center|-\n|align=center|7\n|align=center|44 \n|align=center|-\n|align=center|26\n|align=center|102\n|align=center|136\n|align=center|3,952\n|align=center|27,969\n|-\n|align=center|25 March 2020<ref name=\"25March\"></ref>\n|align=center|561\n|align=center|2,433 \n|align=center|-\n|align=center|15\n|align=center|59 \n|align=center|-\n|align=center|-\n|align=center|-\n|align=center|-\n|align=center|5,035\n|align=center|33,004 \n|-\n|align=center|26 March 2020<ref name=\"26March\"></ref>\n|align=center|1,196\n|align=center|3,629 \n|align=center|-\n|align=center|16\n|align=center|75 \n|align=center|-\n|align=center|-\n|align=center|-\n|align=center|-\n|align=center|7,286\n|align=center|40,290\n|-\n|align=center|27 March 2020<ref name=\"27March\"></ref>\n|align=center|2,069\n|align=center|5,698 \n|align=center|5,564\n|align=center|17\n|align=center|92 \n|align=center|16\n|align=center|42\n|align=center|241\n|align=center|344\n|align=center|7,533\n|align=center|47,823 \n|-\n|align=center|28 March 2020<ref name=\"28March\"></ref>\n|align=center|1,704\n|align=center|7,402 \n|align=center|7,224\n|align=center|16\n|align=center|108 \n|align=center|28\n|align=center|70 \n|align=center|309 \n|align=center|445 \n|align=center|7,641\n|align=center|55,464 \n|-\n|align=center|29 March 2020<ref name=\"29March\"></ref>\n|align=center|1,815\n|align=center|9,217 \n|align=center|8,981\n|align=center|23\n|align=center|131 \n|align=center|35\n|align=center|105 \n|align=center|394 \n|align=center|568 \n|align=center|9,982\n|align=center|65,446 \n|-\n|align=center|30 March 2020<ref name=\"30March\"></ref>\n|align=center|1,610\n|align=center|10,827 \n|align=center|10,497\n|align=center|37\n|align=center|168 \n|align=center|57\n|align=center|162 \n|align=center|523 \n|align=center|725 \n|align=center|11,535\n|align=center|76,981 \n|-\n|align=cente