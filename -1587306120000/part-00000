up>\n| {{IPA|/s/}}\n| {{IPA|/s/}}\n| {{bdo|ltr|\u0725 \u05e9\u05c2<sup>3</sup>/\u0724 \u05e1}} || ''{{transl|sem|\u015b}}''<sup>3</sup>/{{transl|sem|s}}\n| \u1220 || {{IPA|/\u026c/}}\n|-\n! {{transl|sem|[[\u1e92\u0101\u02be|*\u1e71]]}}\n! {{IPAblink|\u03b8\u02bc}}\n| <big>\u0638</big>\n| ''{{transl|sem|\u1e93}}''\n| colspan=\"2\" | {{IPA|/\u00f0\u02e4/}}\n| rowspan=\"3\" | ''{{transl|sem|\u1e63}}''\n| \ud800\udf91 || ''{{transl|sem|\u1e71}}'' > ''{{transl|sem|\u0121}}''\n| rowspan=\"3\" | [[File:phoenician sade.svg|16px]]|| rowspan=\"3\" |''{{transl|sem|\u1e63}}''\n| rowspan=\"3\" | <big>{{script|Hebr|\u05e6}}</big> || rowspan=\"3\" | {{transl|sem|\u1e63}}\n| rowspan=\"3\" | {{IPA|/s\u02e4/}}\n| rowspan=\"3\" | {{IPA|/ts/}}\n| {{bdo|ltr|\u05e6 \u0728<sup>3</sup>/\u05d8 \u071b}} || ''{{transl|sem|\u1e6f\u02bc }}''<sup>3</sup>/{{transl|sem|\u1e6d}}\n| rowspan=\"2\" | \u1338 || rowspan=\"2\" | {{IPA|/ts\u02bc/}}\n|-\n! {{transl|sem|[[Tsade|*\u1e63]]}}\n! {{IPAblink|s\u02bc}}\n| <big>\u0635</big>\n| ''{{transl|sem|\u1e63}}''\n| colspan=\"2\" | {{IPA|/s\u02e4/}}\n| rowspan=\"2\" | \ud800\udf95 || rowspan=\"2\" | ''{{transl|sem|\u1e63}}''\n| \u05e6 \u0728 || {{transl|sem|\u1e63}}\n|-\n! {{transl|sem|[[\u1e0c\u0101d|*\u1e63\u0301]]}}\n! {{IPAblink|\u026c\u02bc}}\n| <big>\u0636</big>\n| ''{{transl|sem|\u1e0d}}''\n| {{IPA|/\u026e\u02e4/}}\n| {{IPA|/d\u02e4/}}\n| {{bdo|ltr|\u05e7 \u0729<sup>3</sup>/\u05e2 \u0725}} || ''{{transl|sem|*\u0121\u02bc }}''<sup>3</sup>/{{transl|sem|\u02bb}}\n| \u1340 || {{IPA|/\u026c\u02bc/}}\n|-\n! Proto<br/>Semitic\n! IPA\n! colspan=\"2\" | Arabic\n! style=\"font-size:85%\" | Classical\n! style=\"font-size:85%\"| Standard\n! Akkadian\n! colspan=\"2\" | Ugaritic\n! colspan=\"2\" | Phoenician\n! colspan=\"2\" | Hebrew\n! style=\"font-size:85%\"| Tiberian\n! style=\"font-size:85%\"| Modern\n! colspan=\"2\" | Aramaic\n! colspan=\"2\" | Ge'ez\n|-\n! {{transl|sem|[[Ghayn|*\u0121]]}}\n! {{IPAblink|\u0263}}~{{IPAblink|\u0281}}\n| <big>\u063a</big>\n| ''{{