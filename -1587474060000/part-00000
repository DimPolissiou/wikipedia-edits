282\u00e4\u02c8\u00f0ro\u031enis]}} ||  '''ladrones''' <br/> {{IPA|[l\u00e4\u02c8\u00f0ro\u031ene\u031es]}} || thieves\n|- align=\"center\"\n| germanum || '''irm\u00e1n'''<br/>{{IPA|[ir\u02c8m\u00e3\u014b]}} ||'''irmao'''<br/>{{IPA|[ir\u02c8mao\u031e]}} ||'''irmao '''<br/>{{IPA|[ir\u02c8mao\u031e]}}||'''ermao'''<br/>{{IPA|[\u026ar\u02c8m\u00e3w]}} || irm\u00e3o ||'''irm\u00e3o '''<br/>{{IPA|[i\u027e\u02c8m\u0250\u0303w\u0303]}}|| '''hermanu'''<br/>{{IPA|[er\u02c8m\u00e4nu]}}|| '''hermano'''<br/>{{IPA|[er\u02c8m\u00e4no\u031e]}} || brother\n|- align=\"center\"\n| lux || '''luz'''<br/>{{IPA|[\u02c8lus]}}||  '''luz'''<br/>{{IPA|[\u02c8lu\u03b8]}} || '''luz'''<br/>{{IPA|[\u02c8lu\u03b8]}} || '''luz/lluz'''<br/>{{IPA|[\u02c8lu\u03b8]/[\u02c8\u028eu\u03b8]}} * || luz/lus || '''luz'''<br/>{{IPA|[\u02c8\u026bu\u0283]}} || '''\u1eca\u1ecauz''' <br/>{{IPA|[\u02c8\u0288\u0282u\u03b8]}} || '''luz'''<br/>{{IPA|[\u02c8lu\u03b8]}} || light \n|- align=\"center\"\n| longum || '''lonxe'''<br/>{{IPA|[\u02c8lon\u0283e]}} ||  '''lonxe'''<br/>{{IPA|[\u02c8lon\u0283e]}} || '''lonxe'''<br/>{{IPA|[\u02c8l\u0254n\u0283e]}} || '''lonxe/llonxe'''<br/>{{IPA|[\u02c8l\u0254n\u0283e]}}/ {{IPA|[\u02c8\u028e\u0254n\u0283e]}} * || longe || '''longe'''<br/>{{IPA|[\u02c8\u026b\u00f5\u0292\u0268]}}||'''\u1eca\u1ecao\u031e\u00f1e'''<br/>{{IPA|[\u02c8\u0288\u0282o\u031e\u0272i]}}||'''luengo'''<br/>{{IPA|[\u02c8lwe\u014bgo\u031e]}} (largo) || long\n|- align=\"center\"\n| quinque || '''cinco'''<br/>{{IPA|[\u02c8si\u014bko\u031e]}} ||  '''cinco'''<br/>{{IPA|[\u02c8\u03b8i\u014bko\u031e]}}||'''cinco'''<br/>{{IPA|[\u02c8\u03b8i\u014bko\u031e]}}||'''cinco'''<br/>{{IPA|[\u02c8\u03b8i\u014bko\u031e]}}|| cinco ||'''cinco'''<br/>{{IPA| [\u02c8s\u0129ku]}}||'''cincu'''<br/>{{IPA|[\u02c8\u03b8i\u014bku]}} || '''cinco'''<br/>{{IPA|[\u02c8\u03b8i\u014bko\u031e]}} || five\n|- align=\"center\"\n| oculum || '''ollo''' <br/>{{IPA|[\u02c8o\u028eo\u031e]/[\u02c8\u0254\u029do\u031e]}} || '''ollo'''<br/>{{IPA|[\u02c8o\u028eo\u