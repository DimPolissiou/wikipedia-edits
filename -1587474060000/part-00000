| style=\"background:#d2dfed\" | espido <br/>{{IPA|[es'pi\u00f0o]}}\n| encoiro <br/>{{IPA|[en'koyro]}}\n| despido <br/>{{IPA|[es'pi\u00f0o]}}\n| style=\"background:#d2dfed\" | encoiro <br/>{{IPA|[en'koiro]}}\n| style=\"background:#d2dfed\" | desnudo  <br/>{{IPA|[\u00f0es'nui\u00f0o]}}\n|- align=\"center\"\n| woman\n| style=\"background:#efefef\" | '''muyer'''\n| style=\"background:#d2dfed\" | muy<sup>z</sup>er <br/>{{IPA|[mu<sup>z</sup>'\u029der]}}\n| style=\"background:#d2dfed\" | muller <br/>{{IPA|[mu'\u03bber]}}\n| muller <br/>{{IPA|[mu'\u03bber]}}\n| muller <br/>{{IPA|[mu'\u03bber]}}\n| style=\"background:#d2dfed\" | mu<sup>i</sup>yer<br/>{{IPA|[mu<sup>i</sup>'\u029der]}}\n| style=\"background:#d2dfed\" | muyer <br/>{{IPA|[mu'\u029der]}}\n|- align=\"center\"\n| eye\n| style=\"background:#efefef\" | '''oyo'''\n| style=\"background:#d2dfed\" | \u00f2y<sup>z</sup>o <br/>{{IPA|[\u02c8\u0254<sup>z</sup>\u029do]}}\n| style=\"background:#d2dfed\" | \u00f2llo <br/>{{IPA|[\u02c8\u0254\u03bbo]}}\n| \u00f2llo <br/>{{IPA|[\u02c8\u0254\u03bbo]}}\n| \u00f2llo <br/>{{IPA|[\u02c8\u0254\u03bbo]}}\n| style=\"background:#d2dfed\" | \u00f2<sup>i</sup>yo  <br/>{{IPA|[\u02c8\u0254<sup>i</sup>\u029do]}}\n| style=\"background:#d2dfed\" | \u00f2yo <br/>{{IPA|[\u0254\u029do]}}\n|- align=\"center\"\n| ear\n| style=\"background:#efefef\" | '''oureya'''\n| style=\"background:#d2dfed\" | orey<sup>z</sup>a <br/>{{IPA|[ore\u029d<sup>z</sup>a]}}\n| style=\"background:#d2dfed\" | o<sup>u</sup>rella <br/>{{IPA|[o<sup>w</sup>'re\u028ea]}}\n| orella <br/>{{IPA|[o're\u028ea]}}\n| orella <br/>{{IPA|[o're\u028ea]}}\n| style=\"background:#d2dfed\" | ore<sup>i</sup>ya <br/>{{IPA|[ore\u029d<sup>i</sup>a]}}\n| style=\"background:#d2dfed\" | oureya <br/>{{IPA|[owre\u029da]}}\n|- align=\"center\"\n| hearing\n| style=\"background:#efefef\" | '''ouguido '''\n| style=\"background:#d2dfed\" | ouguido <br/>{{IPA|[ow'gi\u00f0o]}}\n| style=\"background:#d2dfed\" | ouguido <br/>{{IPA|[ow'gi\u00f0o]}}\n| o\u00eddo <