4 || align=left|{{CHN}} || 41\n|-\n! 3\n| align=left|{{USA}} || 35 || align=left|{{USA}} || 34 || align=left|{{CAN}} || 30\n|-\n! 4\n| align=left|{{UKR}} || 33 || align=left|{{GEO}} || 29 || align=left|{{RUS}} || 28\n|-\n! 5\n| align=left|{{UZB}} || 32 || align=left|{{IRI}} || 27 || align=left|{{flagcountry|BLR|1995}} || 24\n|-\n! 6\n| align=left|{{GEO}} || 32 || align=left|{{UKR}} || 26 || align=left|{{GER}} || 23\n|-\n! 7\n| align=left|{{flagcountry|BLR|1995}} || 23 || align=left|{{BUL}} || 18 || align=left|{{USA}} || 22\n|-\n! 8\n| align=left|{{BUL}} || 22 || align=left|{{HUN}} || 16 || align=left|{{UKR}} || 22\n|-\n! 9\n| align=left|{{CUB}} || 18 || align=left|{{FIN}} || 15 || align=left|{{POL}} || 19\n|-\n! 10\n| align=left|{{AZE}} || 16 || align=left|{{flagcountry|BLR|1995}} || 15 || align=left|{{SWE}} || 19\n|}\n\n==Medal summary==\n\n===Men's freestyle===\n{| {{MedalistTable|type=Event}}\n|-\n|rowspan=2|55 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's freestyle 55 kg}}\n|rowspan=2|{{flagmedalist|[[Radoslav Velikov]]|BUL}}\n|rowspan=2|{{flagmedalist|[[Besik Kudukhov]]|RUS}}\n|{{flagmedalist|[[Namig Abdullayev]]|AZE}}\n|-\n|{{flagmedalist|[[Sammie Henson]]|USA}}\n|-\n|rowspan=2|60 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's freestyle 60 kg}}\n|rowspan=2|{{flagmedalist|[[Morad Mohammadi]]|IRI}}\n|rowspan=2|{{flagmedalist|[[Mike Zadick]]|USA}}\n|{{flagmedalist|[[Noriyuki Takatsuka]]|JPN}}\n|-\n|{{flagmedalist|[[Mavlet Batirov]]|RUS}}\n|-\n|rowspan=2|66 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's freestyle 66 kg}}\n|rowspan=2|{{flagmedalist|[[Bill Zadick]]|USA}}\n|rowspan=2|{{flagmedalist|[[Otar Tushishvili]]|GEO}}\n|{{flagmedalist|[[Geandry Garz\u00f3n]]|CUB}}\n|-\n|{{flagmedalist|[[Andriy Stadnik]]|UKR}}\n|-\n|rowspan=2|74 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's freestyle 74 kg}}\n|rowspan=2|{{flagmedalist|[[Ibragim Aldatov]]|UKR}}\n|rowspan=2|{{flagmedalist|[[Ali Asghar Bazri]]|IRI}}\n|{{flagmedalist|[[Soslan Tigiev]]|UZB}}\n|-\n|{{flagmedalist|[[Donny Pritzlaff]]|USA}}\n|-\n|rowspan=2|84 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's freestyle 84 kg}}\n|rowspan=2|{{flagmedalist|[[Sazhid Sazhidov]]|RUS}}\n|rowspan=2|{{flagmedalist|[[Revaz Mindorashvili]]|GEO}}\n|{{flagmedalist|[[Reza Yazdani]]|IRI}}\n|-\n|{{flagmedalist|[[Zaurbek Sokhiev]]|UZB}}\n|-\n|rowspan=2|96 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's freestyle 96 kg}}\n|rowspan=2|{{flagmedalist|[[Khadzhimurat Gatsalov]]|RUS}}\n|rowspan=2|{{flagmedalist|[[Giorgi Gogshelidze]]|GEO}}\n|{{flagmedalist|[[Michel Batista (wrestler)|Michel Batista]]|CUB}}\n|-\n|{{flagmedalist|[[Ruslan Sheikhau]]|BLR|1995}}\n|-\n|rowspan=2|120 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's freestyle 120 kg}}\n|rowspan=2|{{flagmedalist|[[Artur Taymazov]]|UZB}}\n|rowspan=2|{{flagmedalist|[[Kuramagomed Kuramagomedov]]|RUS}}\n|{{flagmedalist|[[Fardin Masoumi]]|IRI}}\n|-\n|{{flagmedalist|[[Ruslan Basiev]]|ARM}}\n|}\n\n===Men's Greco-Roman===\n{| {{MedalistTable|type=Event}}\n|-\n|rowspan=2|55 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's Greco-Roman 55 kg}}\n|rowspan=2|{{flagmedalist|[[Hamid Sourian]]|IRI}}\n|rowspan=2|{{flagmedalist|[[Rovshan Bayramov]]|AZE}}\n|{{flagmedalist|[[Lindsey Durlacher]]|USA}}\n|-\n|{{flagmedalist|[[Park Eun-chul]]|KOR|1997}}\n|-\n|rowspan=2|60 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's Greco-Roman 60 kg}}\n|rowspan=2|{{flagmedalist|[[Joe Warren (fighter)|Joe Warren]]|USA}}\n|rowspan=2|{{flagmedalist|[[David Bedinadze]]|GEO}}\n|{{flagmedalist|[[B\u00fcnyamin Emik]]|TUR}}\n|-\n|{{flagmedalist|[[Vyacheslav Dzhaste]]|RUS}}\n|-\n|rowspan=2|66 kg<br>{{DetailsLink|2006 World Wrestling Championships \u2013 Men's Greco-Roman 66 kg}}\n|rowspan=2|{{flagmedalist|[[Li Yanyan]]|CHN}}\n|rowspan=2|{{flagmedalist|[[Kanatbek Begaliev]]|KGZ}}\n|{{flagmedalist|[[Sergey Kovalenko