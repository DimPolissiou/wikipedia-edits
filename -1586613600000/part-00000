IA|CR|D18|city1=Cedar Falls}}\n}}\n{{IAint|exit\n|county=Black Hawk\n|cspan=11\n|location1=Cedar Falls\n|location2=Hudson\n|location_group=city\n|lspan=2\n|type=concur\n|mile=205.593\n|exit=224\n|road={{Jct|state=IA|IA|58|dir1=South|name1=Hudson Road|city1=Hudson|location2=[[University of Northern Iowa]]|location3=[[UNI-Dome]]}}\n|notes=Western end of Iowa 58 overlap\n}}\n{{IAint|exit\n|type=concur\n|mile=206.684\n|exit=225\n|road={{Jct|state=IA|AOTS|27|dir1=North|name1=[[Avenue of the Saints]]|IA|58|dir2=North|extra=airport|city1=Cedar Falls|location2=[[Waterloo Regional Airport|Airport]]}}\n|notes=Eastern end of Iowa 58 overlap; western end of Iowa 27 overlap\n}}\n{{IAint|exit\n|location=Waterloo\n|lspan=4\n|mile=208.744\n|exit=227\n|road={{Jct|state=IA|US|63|name1=Sergeant Road|city1=Hudson}}\n}}\n{{IAint|exit\n|mile=210.276\n|exit=229\n|road=Ansborough Avenue\n}}\n{{IAint|exit\n|mile=211.784\n|exit=230\n|road={{Jct|state=IA|IA|21|dir1=South|name1=Hawkeye Road|city1=Dysart}}\n}}\n{{IAint|exit\n|type=concur\n|mile=213.566\n|exit={{tooltip|232|eastbound}}<hr>{{tooltip|71|westbound}}\n|road={{Jct|state=IA|I|380|dir1=North|US|218|city1=Waterloo|city2=La Porte City}}\n|notes=Western end of I-380 overlap; exit numbers follow I-380\n}}\n{{IAint|exit\n|location=Evansdale\n|lspan=2\n|mile=214.374\n|exit=70\n|road=River Forest Road\n}}\n{{IAint|exit\n|mile=216.642\n|exit=68\n|road=Evansdale Drive&nbsp;\u2013 [[Elk Run Heights, Iowa|Elk Run Heights]]\n}}\n{{IAint|exit\n|township=Poyner\n|ctdab=Black Hawk\n|lspan=2\n|mile=218.550\n|exit=66\n|road={{Jct|state=IA|CR|V49|city1=Raymond|city2=Gilbertville}}\n}}\n{{IAint|exit\n|type=concur\n|mile=219.985\n|exit=65\n|road={{Jct|state=IA|I|380|dir1=South|AOTS|27|dir2=South|name2=Avenue of the Saints}}\n|notes=Eastern end of I-380 and Iowa 27 overlaps; exit numbers follow US&nbsp;20\n}}\n{{IAint|exit\n|township=Fox\n|ctdab=Black Hawk\n|mile=221.496\n|exit=240\n|road={{Jct|state=IA|CR|V51|city1=Dunkerton|city2=La Porte City}}\n}}\n{{I