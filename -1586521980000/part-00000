tonia (''[[Eesti Ekspress]]'')<ref>{{Cite web |url=https://ekspress.delfi.ee/areen/eesti-tipp-40-muusikas-taukari-kuule-kihutab-nuud-ulespoole?id=89317685|title=EESTI TIPP-40 MUUSIKAS: Taukari \u201eKuule\u201c kihutab n\u00fc\u00fcd \u00fclespoole|website=[[Eesti Ekspress]]|language=Estonian|access-date=March 26, 2020}}</ref>\n| 5\n|-\n! scope=\"row\"| [[Euro Digital Songs]] (''[[Billboard (magazine)|Billboard]]'')<ref name=\"eurochart\">{{cite web|url=https://www.billboard.com/charts/euro-digital-song-sales/2020-03-21|title=Euro Digital Song Sales \u2013 March 21, 2020|work=[[Billboard (magazine)|Billboard]]|accessdate=18 February 2020}}</ref>\n| 13\n|-\n{{single chart|Finland|13|artist=Doja Cat|rowheader=true|song=Say So|accessdate=March 23, 2020}}\n|-\n! scope=\"row\"| France ([[Syndicat National de l'\u00c9dition Phonographique|SNEP]])<ref>{{cite web|url=http://snepmusique.com/les-tops/le-top-de-la-semaine/top-albums/?semaine=14?&annee=2020&categorie=Top%20Singles|title=Top Singles (Week 14, 2020)|publisher=[[Syndicat National de l'\u00c9dition Phonographique]]|language=French|accessdate=April 7, 2020}}</ref>\n| 23\n|-\n{{single chart|Germany2|38|songid=1935938|artist=Doja Cat|song=Say So|rowheader=true|accessdate=March 27, 2020}}\n|-\n! scope=\"row\"| Greece ([[IFPI Greece|IFPI]])<ref>{{Cite web|url=http://www.ifpi.gr/digital_ien.html|publisher=[[IFPI Greece]]|accessdate=1 March 2020|title=Official IFPI Charts \u2013 Digital Singles Chart (International) \u2013 Week: 7/2020}}</ref>\n| 13\n|-\n{{single chart|Hungarystream|14|year=2020|week=13|rowheader=true|accessdate=April 2, 2020}}\n|-\n! scope=\"row\"| Iceland ([[Music of Iceland|Tonlist]])<ref>{{Cite web|url=https://plotutidindi.is/lagalistinn/|title=T\u00d3NLISTINN \u2013 Vika 10 \u2013 2020; Pl\u00f6tut\u00ed\u00f0indi}}</ref>\n| 5\n|-\n{{single chart|Ireland4|4|date=20200313|rowheader=true|accessdate=March 14, 2020}}\n|-\n! scope=\"row\"| Israel ([[Media Forest]])<ref name=\"israelchart\">{{cite web|url=