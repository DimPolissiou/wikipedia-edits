r, 10 Apr\n|yAxisTitle= No. of cases\n|legend= Autonomous Community\n|y1Title=Madrid\n|y1=4, 5, 8, 10, 29, 49, 70, 90, 137, 174, 202, 469, 782, 1024, 1388, 1990, 2940, 3544, 4165, 4871, 5637, 6777, 7165, 8921, 9702, 10575, 12352, 14597, 17166, 19243, 21520, 22677, 24090, 27509, 29840, 32155, 34188, 36249, 37584, 38723, 40469, 42450, 43877, 44783\n|y2Title=Catalonia\n|y2=2, 3, 5, 6, 15, 15, 15, 24, 24, 24, 49, 75, 124, 156, 260, 316, 509, 715, 903, 1394, 1866, 2702, 3270, 4203, 4704, 5925, 7864, 9937, 11592, 12940, 14263, 15026, 16157, 18773, 19991, 21804, 23460, 24734, 26032, 26824, 28323, 29647, 31043, 31824\n|y3Title=Castilla-La Mancha\n|y3=0, 0, 0, 1, 3, 7, 12, 13, 15, 15, 15, 26, 39, 71, 115, 194, 289, 401, 567, 567, 675, 801, 1044, 1423, 1819, 2078, 2465, 2780, 3383, 3934, 4512, 5246, 5858, 6424, 7047, 7682, 8523, 9324, 10031, 10602, 11077, 11788, 12489, 13063\n|y4Title=Castile and Leon\n|y4=0, 2, 2, 3, 3, 8, 11, 11, 14, 14, 22, 23, 56, 71, 92, 169, 223, 292, 334, 431, 668, 868, 1147, 1466, 1744, 2055, 2460, 2940, 3488, 4132, 4791, 5414, 5801, 6211, 6847, 7355, 7875, 8332, 8749, 9116, 9581, 10058, 10518, 11102\n|y5Title=Basque Country\n|y5=0, 0, 2, 3, 9, 13, 17, 17, 45, 45, 102, 149, 195, 225, 346, 417, 417, 630, 630, 765, 973, 1190, 1465, 1725, 2097, 2421, 2728, 3271, 3946, 4601, 5136, 5740, 6057, 6320, 6838, 7317, 7827, 8187, 8628, 8810, 9021, 9452, 9806, 10103\n|y6Title=Andalusia\n|y6=1, 6, 8, 12, 12, 13, 13, 12, 21, 27, 35, 54, 71, 90, 115, 219, 269, 437, 554, 683, 859, 1008, 1287, 1515, 1725, 1961, 2471, 3010, 3406, 3793, 4277, 4682, 5405, 5818, 6392, 6972, 7374, 7869, 8301, 8581, 8767, 8997, 9261, 9510\n|y7Title=Valencian Community\n|y7=2, 8, 10, 15, 15, 15, 19, 19, 30, 30, 37, 37, 50, 65, 76, 94, 130, 409, 409, 541, 726, 921, 1105, 1363, 1604, 1901, 2167, 2616, 3200, 3532, 4034, 4784, 5110, 5508, 5922, 6308, 6624, 6901, 7184, 7334, 7443, 7655, 7964, 8331\n|y8Title=Galicia\n|y8=0, 0, 0, 0, 0, 0, 1, 1, 3, 3, 5, 6, 22, 39, 35, 85, 115, 195, 245, 292, 341, 4