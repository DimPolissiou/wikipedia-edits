\n|-\n!{{chset-left2|8_<br />128}}\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|-\n!{{chset-left2|9_<br />144}}\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|{{chset-color-undef}}|\n|-\n!{{chset-left2|A_<br />160}}\n|{{chset-color-misc}}|{{chset-ctrl|00A0|[[non-breaking space|NBSP]]|160}}\n|{{chset-color-ext-punct}}|{{chset-cell|00A1|[[inverted exclamation mark|\u00a1]]|161}}\n|{{chset-color-graph}}|{{chset-cell|00A2|[[cent (currency)|\u00a2]]|162}}\n|{{chset-color-graph}}|{{chset-cell|00A3|[[pound sign|\u00a3]]|163}}\n|{{chset-color-graph}}|{{chset-cell|00A4|[[currency sign (typography)|\u00a4]]|164}}\n|{{chset-color-graph}}|{{chset-cell|00A5|[[Yen sign|\u00a5]]|165}}\n|{{chset-color-graph}}|{{chset-cell|00A6|[[&#xA6;]]|166}}\n|{{chset-color-ext-punct}}|{{chset-cell|00A7|[[section sign|\u00a7]]|167}}\n|{{chset-color-graph}}|{{chset-cell|00A8|[[Diaeresis (diacritic)|\u00a8]]|168}}\n|{{chset-color-graph}}|{{chset-cell|00A9|[[copyright symbol|\u00a9]]|169}}\n|{{Chset-color-letter}}|{{chset-cell|00AA|[[\u00aa]]|170}}\n|{{chset-color-ext-punct}}|{{chset-cell|00AB|[[Guillemet|\u00ab]]|171}}\n|{{chset-color-graph}}|{{chset-cell|00AC|[[Negation|\u00ac]]|172}}\n|{{chset-color-ctrl}}|{{chset-ctrl|00AD|[[soft hyphen|SHY]]|173}}\n|{{chset-color-graph}}|{{chset-cell|00AE|[[Registered trademark symbol|\u