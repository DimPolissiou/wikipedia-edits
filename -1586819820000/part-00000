atchdays.\n\n{{col-begin}}\n{{col-2}}\n\n===Matches 1\u201322===\n{{#invoke:sports results|main\n|matches_style=FBR\n|team1=BAS|team2=BEL|team3=BRE|team4=CEM|team5=MGP\n|team6=POB|team7=RAB|team8=REN|team9=SKE|team10=SIL\n|team11=VAR|team12=VLZ\n\n|name_BAS=[[KF Bashkimi (1947\u20132008)|Bashkimi]]\n|match_BAS_BEL=2\u20131\n|match_BAS_BRE=2\u20132\n|match_BAS_CEM=3\u20132\n|match_BAS_MGP=5\u20130\n|match_BAS_POB=2\u20131\n|match_BAS_RAB=1\u20131\n|match_BAS_REN=3\u20132\n|match_BAS_SKE=4\u20132\n|match_BAS_SIL=1\u20131\n|match_BAS_VAR=0\u20131\n|match_BAS_VLZ=0\u20131\n\n|name_BEL=[[FK Belasica|Belasica]]\n|match_BEL_BAS=0\u20132\n|match_BEL_BRE=0\u20131\n|match_BEL_CEM=0\u20132\n|match_BEL_MGP=0\u20132\n|match_BEL_POB=2\u20135\n|match_BEL_RAB=1\u20132\n|match_BEL_REN=2\u20130\n|match_BEL_SKE=1\u20132\n|match_BEL_SIL=1\u20131\n|match_BEL_VAR=0\u20132\n|match_BEL_VLZ=0\u20131\n\n|name_BRE=[[FK Bregalnica \u0160tip|Bregalnica Kraun]]\n|match_BRE_BAS=0\u20131\n|match_BRE_BEL=3\u20131\n|match_BRE_CEM=2\u20131\n|match_BRE_MGP=0\u20134\n|match_BRE_POB=2\u20130\n|match_BRE_RAB=1\u20132\n|match_BRE_REN=2\u20131\n|match_BRE_SKE=2\u20130\n|match_BRE_SIL=1\u20132\n|match_BRE_VAR=0\u20133\n|match_BRE_VLZ=1\u20131\n\n|name_CEM=[[FK Cementarnica 55|Cementarnica 55]]\n|match_CEM_BAS=1\u20130\n|match_CEM_BEL=3\u20130\n|match_CEM_BRE=1\u20132\n|match_CEM_MGP=2\u20132\n|match_CEM_POB=2\u20132\n|match_CEM_RAB=2\u20132\n|match_CEM_REN=2\u20130\n|match_CEM_SKE=1\u20132\n|match_CEM_SIL=2\u20130\n|match_CEM_VAR=0\u20131\n|match_CEM_VLZ=3\u20131\n\n|name_MGP=[[FK Makedonija Gjor\u010de Petrov|Makedonija]]\n|match_MGP_BAS=3\u20130\n|match_MGP_BEL=1\u20130\n|match_MGP_BRE=1\u20130\n|match_MGP_CEM=4\u20130\n|match_MGP_POB=1\u20130\n|match_MGP_RAB=0\u20133\n|match_MGP_REN=3\u20130\n|match_MGP_SKE=1\u20130\n|match_MGP_SIL=3\u20131\n|match_MGP_VAR=1\u20130\n|match_MGP_VLZ=3\u20130\n\n|name_POB=[[FK Pobeda|Pobeda]]\n|match_POB_BAS=3\u20131\n|match_POB_BEL=3\u20130\n|match_POB_BRE=3\u20130\n|match