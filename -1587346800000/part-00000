L|1936}}\n|-\n|\n|align=right|{{fb-rt|Burma|1948}}\n|align=center|5\u20130\n|{{fb|NEP}}\n|-\n|27 April\n|align=right|{{fb-rt|PHL|1936}}\n|align=center|0\u20137\n|{{fb|Burma|1948}}\n|-\n|\n|align=right|{{fb-rt|IND}}\n|align=center|2\u20131\n|{{fb|NEP}}\n|-\n|29 April\n|align=right|{{fb-rt|NEP}}\n|align=center|0\u20131\n|{{fb|PHL|1936}}\n|-\n|\n|align=right|{{fb-rt|Burma|1948}}\n|align=center|1\u20131\n|{{fb|IND}}\n|}\n\n===Group B===\n{| class=\"wikitable\" style=\"text-align: center;\"\n!width=165|Teams\n!width=20|Pld\n!width=20|W\n!width=20|D\n!width=20|L\n!width=20|GF\n!width=20|GA\n!width=20|GD\n!width=20|Pts\n|- align=center style=\"background:#ccffcc;\"\n|style=\"text-align:left;\"|{{fb|JPN}}\n|3||3||0||0||10||0||+10||'''6'''\n|- align=center style=\"background:#ccffcc;\"\n|style=\"text-align:left;\"|{{fb|MYS}}\n|3||2||0||1||3||5||\u20132||'''4'''\n|- align=center\n|style=\"text-align:left;\"|{{fb|TWN}}\n|3||1||0||2||3||6||\u20133||'''2''' \n|- align=center\n|style=\"text-align:left;\"|{{fb|SGP}}\n|3||0||0||3||1||6||\u20135||'''0''' \n|}\n<br>\n{| cellspacing=1 width=70%\n!width=25%|\n!width=30%|\n!width=15%|\n!width=30%|\n|-\n|24 April\n|align=right|{{fb-rt|JPN}}\n|align=center|3\u20130\n|{{fb|TWN}}\n|-\n|25 April\n|align=right|{{fb-rt|MYS}}\n|align=center|1\u20130\n|{{fb|SGP}}\n|-\n|27 April\n|align=right|{{fb-rt|TWN}}\n|align=center|1\u20132\n|{{fb|MYS}}\n|-\n|\n|align=right|{{fb-rt|JPN}}\n|align=center|3\u20130\n|{{fb|SGP}}\n|-\n|29 April\n|align=right|{{fb-rt|SGP}}\n|align=center|1\u20132\n|{{fb|TWN}}\n|-\n|\n|align=right|{{fb-rt|MYS}}\n|align=center|0\u20134\n|{{fb|JPN}}\n|}\n\n===Group C===\n{| class=\"wikitable\" style=\"text-align: center;\"\n!width=165|Teams\n!width=20|Pld\n!width=20|W\n!width=20|D\n!width=20|L\n!width=20|GF\n!width=20|GA\n!width=20|GD\n!width=20|Pts\n|- align=center style=\"background:#ccffcc;\"\n|style=\"text-align:left;\"|{{fb|ISR}}\n|3||2||1||0||8||1||+7||'''5'''\n|- align=center style=\"background:#ccffcc;\"\n|style=\"text-align: