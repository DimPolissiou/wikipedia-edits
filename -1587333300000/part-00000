 to multiply by 10 (log)? --->\n! scope=\"col\" {{vert header|Change}}\n! scope=\"col\" {{vert header|% change}}\n! class=\"unsortable\" {{vert header|Presumptive}}\n! class=\"unsortable\" {{vert header|CDC confirmed}}\n! scope=\"col\" class=\"unsortable\" style=\"border-left: 2px solid #888;\" {{vert header|Biogen|cellstyle=border-left: 2px solid #888;}}\n! scope=\"col\" class=\"unsortable\" {{vert header|Local}}\n! scope=\"col\" class=\"unsortable\" {{vert header|Travel}}\n! scope=\"col\" class=\"unsortable\" {{vert header|Unknown}}\n! scope=\"col\" class=\"unsortable\" style=\"border-left: 2px solid #888;\" {{vert header|Total|cellstyle=border-left: 2px solid #888;}}\n! scope=\"col\" {{vert header|Change}}\n! scope=\"col\" {{vert header|% change}}\n! scope=\"col\" class=\"unsortable\" style=\"border-left: 2px solid #888;\" {{vert header|Yes|cellstyle=border-left: 2px solid #888;}}\n! scope=\"col\" class=\"unsortable\" {{vert header|No}}\n! scope=\"col\" class=\"unsortable\" {{vert header|Unknown}}\n! scope=\"col\" class=\"unsortable\" style=\"border-left: 2px solid #888;\" {{vert header|Total|cellstyle=border-left: 2px solid #888;}}\n! scope=\"col\" class=\"unsortable\" {{vert header|Change}}\n! scope=\"col\" class=\"unsortable\" {{vert header|% change}}\n! scope=\"col\" class=\"unsortable\" {{vert header|Total|cellstyle=border-left: 2px solid #888;}}\n! scope=\"col\" class=\"unsortable\" {{vert header|Released}}\n! scope=\"col\" class=\"unsortable\" style=\"border-left: 2px solid #888;\" | Source\t\n|-\n! |\n! colspan=\"5\" style=\"border-left: 2px solid #888;\" | Total\n! colspan=\"4\" style=\"border-left: 2px solid #888;\" | Exposure\n! colspan=\"3\" style=\"border-left: 2px solid #888;\" | Tests\n! colspan=\"3\" style=\"border-left: 2px solid #888;\" | Hospitalization\n! colspan=\"3\" style=\"border-left: 2px solid #888;\" | Deaths\n! colspan=\"2\" style=\"border-left: 2px solid #888;\" | Quarantine\n! colspan=\"1\" style=\"border-left: 2px solid #888;\" |\n|