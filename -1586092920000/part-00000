ccer.ro/divizia_b/tables/1986_87.shtml romaniansoccer.ro] {{in lang|ro}}\n\n<!--Update team positions here-->\n|team1=PTM |team2=MAR |team3=BIH |team4=GLO |team5=RE\u0218 |team6=PAR |team7=USM |team8=ARM |team9=STR |team10=UTA |team11=OLI |team12=CIL |team13=MET |team14=MEC |team15=AUR |team16=MUR |team17=CFR |team18=CAV\n\n<!--Update team qualifications here (defined below)-->\n|result1=P \n|result15=R \n|result16=R \n|result17=R\n|result18=R\n\n<!--Team results here-->|update=30 June 1987|winpoints=2\n|win_PTM= 19|draw_PTM= 10|loss_PTM=  5|gf_PTM= 80|ga_PTM= 40 <!-- Politehnica Timi\u0219oara -->\n|win_MAR= 19|draw_MAR=  8|loss_MAR=  7|gf_MAR= 69|ga_MAR= 22 <!-- Maramure\u0219 Baia Mare -->\n|win_BIH= 20|draw_BIH=  9|loss_BIH=  5|gf_BIH= 55|ga_BIH= 15 <!-- Bihor Oradea -->\n|win_GLO= 16|draw_GLO=  5|loss_GLO= 13|gf_GLO= 53|ga_GLO= 46 <!-- Gloria Bistri\u021ba -->\n|win_RE\u0218= 15|draw_RE\u0218=  6|loss_RE\u0218= 13|gf_RE\u0218= 44|ga_RE\u0218= 36 <!-- CSM Re\u0219i\u021ba -->\n|win_PAR= 14|draw_PAR=  8|loss_PAR= 12|gf_PAR= 45|ga_PAR= 42 <!-- Minerul Paro\u0219eni -->\n|win_USM= 15|draw_USM=  5|loss_USM= 14|gf_USM= 42|ga_USM= 44 <!-- Unio Satu Mare -->\n|win_ARM= 14|draw_ARM=  6|loss_ARM= 14|gf_ARM= 46|ga_ARM= 48 <!-- Arm\u0103tura Zal\u0103u -->\n|win_STR= 13|draw_STR=  7|loss_STR= 14|gf_STR= 41|ga_STR= 47 <!-- Strungul Arad -->\n|win_UTA= 14|draw_UTA=  5|loss_UTA= 15|gf_UTA= 43|ga_UTA= 52 <!-- UTA Arad -->\n|win_OLI= 12|draw_OLI=  9|loss_OLI= 13|gf_OLI= 41|ga_OLI= 51 <!-- Olimpia Satu Mare -->\n|win_CIL= 13|draw_CIL=  6|loss_CIL= 15|gf_CIL= 48|ga_CIL= 54 <!-- CIL Sighetu Marma\u021biei -->\n|win_MET= 14|draw_MET=  4|loss_MET= 16|gf_MET= 46|ga_MET= 54 <!-- Metalul Boc\u0219a -->\n|win_MEC= 14|draw_MEC=  3|loss_MEC= 17|gf_MEC= 55|ga_MEC= 58 <!-- Mecanica Or\u0103\u0219tie -->\n|win_AUR= 11|draw_AUR=  7|loss_AUR= 16|gf_AUR= 46|ga_AUR= 59 <!-- Aurul Brad -->\n|win_MUR= 11|draw_MUR=  3|loss_MUR= 20|gf_MUR= 30|ga_MUR= 73 <!-- Mure\u0219ul Deva -->\n|win_CFR=  7|draw_