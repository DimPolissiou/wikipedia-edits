cope=\"row\"{{singlechart|Australia|2|artist=The Pussycat Dolls|song=When I Grow Up}} \n|-\n!scope=\"row\"{{singlechart|Australiaurban|1|url=http://pandora.nla.gov.au/pan/23790/20081120-0000/issue977.pdf|urltitle=ARIA Chartifacts: Week Commencing ~ 17th November 2008 ~ Issue #977|artist=The Pussycat Dolls}}\n|-\n!scope=\"row\"{{singlechart|Austria|7|artist=The Pussycat Dolls|song=When I Grow Up}}\n|-\n!scope=\"row\"{{singlechart|Flanders|2|artist=The Pussycat Dolls|song=When I Grow Up}}\n|-\n!scope=\"row\"{{singlechart|Wallonia|3|artist=The Pussycat Dolls|song=When I Grow Up}}\n|-\n!scope=\"row\"{{singlechart|Canada|3|artist=The Pussycat Dolls|song=When I Grow Up|artistid=656989}} \n|-\n!scope=\"row\"{{singlechart|Czech Republic|1|year=2008|week=35}}\n|-\n!scope=\"row\"{{singlechart|Denmark|6|artist=The Pussycat Dolls|song=When I Grow Up}}\n|-\n!scope=\"row\"{{singlechart|Billboardeuropeanhot100|3|artist=The Pussycat Dolls|song=When I Grow Up|artistid=656989}} \n|-\n!scope=\"row\"{{singlechart|Finland|9|artist=The Pussycat Dolls|song=When I Grow Up}}\n|-\n!scope=\"row\"{{singlechart|France|2|artist=The Pussycat Dolls|song=When I Grow Up}}\n|-\n!scope=\"row\"{{singlechart|Germany2|7|artist=The Pussycat Dolls|song=When I Grow Up|songid=469081}}\n|-\n!scope=\"row\"{{singlechart|Hungary|2|year=2008|week=51}}\n|-\n!scope=\"row\"{{singlechart|Hungarydance|1|year=2008|week=48}}\n|-\n!scope=\"row\"{{singlechart|Ireland2|2|song=When I Grow Up|access-date=January 29, 2020}}\n|-\n!scope=\"row\"{{singlechart|Billboardjapanhot100|6|artist=The Pussycat Dolls|song=When I Grow Up|artistid=656989}} \n|-\n!scope=\"row\"{{singlechart|Dutch100|2|artist=The Pussycat Dolls|song=When I Grow Up}}\n|-\n! scope=\"row\" |Portugal (''[[Billboard (magazine)|Billboard]]'')<ref>{{cite web|title=The Pussycat Dolls - When I Grow Up - Music Charts|url=http://acharts.us/song/36020|website=aCharts.com|accessdate=July 14, 2014}}</ref>\n|align=\"center\"|29\n|-\n!scope=\"row\"{{singlechart|New Zealand|5