er|pos=OL}}\n{{American football roster/Player|num=66|class=FR|first=Solomon|last=Kindley|pos=OL|link=y}}\n{{American football roster/Player|num=67|class=FR|first=Sam|last=Madden|pos=OL}}\n{{American football roster/Player|num=68|class=SO|first=Sean|last=Fogarty|pos=OL}}\n{{American football roster/Player|num=70|class=JR|first=Aulden|last=Bynum|pos=OL}}\n{{American football roster/Player|num=72|class=SR|first=Tyler|last=Catalina|pos=OL|link=y}}\n{{American football roster/Player|num=73|class=SR|first=Greg|last=Pyke|pos=OL}}\n{{American football roster/Player|num=74|class=FR|first=Ben|last=Cleveland|pos=OL}}\n{{American football roster/Player|num=75|class=JR|first=Thomas|last=Swilley|pos=OL}}\n{{American football roster/Player|num=77|class=JR|first=Isaiah|last=Wynn|pos=OL|link=y}}\n{{American football roster/Player|num=80|class=SR|first=Charlie|last=Hegedus|pos=WR}}\n{{American football roster/Player|num=82|class=SO|first=Michael|last=Chigbu|pos=WR}}\n{{American football roster/Player|num=83|class=JR|first=Jeb|last=Blazevich|pos=TE}}\n{{American football roster/Player|num=84|class=FR|first=Wyatt|last=Payne|pos=WR|rs=y}}\n{{American football roster/Player|num=85|class=JR|first=Jordan|last=Davis|pos=TE}}\n{{American football roster/Player|num=86|class=FR|first=Davis|last=Kelly|pos=WR}}\n{{American football roster/Player|num=86|class=FR|first=Wix|last=Patton|pos=TE}}\n{{American football roster/Player|num=87|class=SO|first=Miles|last=McGinty|pos=TE}}\n{{American football roster/Player|num=87|class=FR|first=Tyler|last=Simmons|pos=WR}}\n{{American football roster/Player|num=88|class=SO|first=Jackson|last=Harris|pos=TE}}\n{{American football roster/Player|num=89|class=FR|first=Charlie|last=Woerner|pos=TE}}\n\n|defensive_players=\n{{American football roster/Player|num=2|class=SR|first=Maurice|last=Smith|pos=DB|link=y|dab= Maurice Smith (cornerback)}}\n{{American football roster/Player|num=3|class=SO|first=Roquan|last=Smith|pos=LB|link=y}}\n{{American football roster/Player|