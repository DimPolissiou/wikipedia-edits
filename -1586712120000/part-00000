players=\n{{American football roster/Player|num=1|class=JR|first=Sony|last=Michel|pos=RB|link=y}}\n{{American football roster/Player|num=2|class=SO|first=Jayson|last=Stanley|pos=WR}}\n{{American football roster/Player|num=2|class=SO|first=Sam|last=Vaughn|pos=QB}}\n{{American football roster/Player|num=4|class=FR|first=Mecole|last=Hardman|pos=WR|link=y}}\n{{American football roster/Player|num=5|class=SO|first=Terry|last=Godwin|pos=WR|link=y}}\n{{American football roster/Player|num=6|class=JR|first=Javon|last=Wims|pos=WR|link=y}}\n{{American football roster/Player|num=8|class=FR|first=Riley|last=Ridley|pos=WR|link=y}}\n{{American football roster/Player|num=9|class=SR|first=Kenneth|last=Towns|pos=WR}}\n{{American football roster/Player|num=10|class=FR|first=Jacob|last=Eason|pos=QB|link=y}}\n{{American football roster/Player|num=11|class=SR|first=Greyson|last=Lambert|pos=QB|link=y}}\n{{American football roster/Player|num=12|class=JR|first=Brice|last=Ramsey|pos=QB}}\n{{American football roster/Player|num=13|class=FR|first=Elijah|last=Holyfield|pos=RB|link=y}}\n{{American football roster/Player|num=14|class=JR|first=Parker|last=McLeod|pos=QB}}\n{{American football roster/Player|num=16|class=JR|first=Isaiah|last=McKenzie|pos=WR|link=y}}\n{{American football roster/Player|num=17|class=FR|first=Josh|last=Moran|pos=WR}}\n{{American football roster/Player|num=18|class=FR|first=Isaac|last=Nauta|pos=TE|link=y}}\n{{American football roster/Player|num=19|class=FR|first=Willie|last=Erdman|pos=WR}}\n{{American football roster/Player|num=22|class=SR|first=Brendan|last=Douglas|pos=RB}}\n{{American football roster/Player|num=22|class=JR|first=Avery|last=McNeely|pos=RB}}\n{{American football roster/Player|num=23|class=FR|first=Shakenneth|last=Williams|pos=WR}}\n{{American football roster/Player|num=24|class=FR|first=Prather|last=Hudson|pos=RB}}\n{{American football roster/Player|num=25|class=SO|first=Steven|last=Van Tiflin|pos=WR}}\n{{American football roster/Player|num=26|class=FR|firs