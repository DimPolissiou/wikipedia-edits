s \n | gold_5  = 50 | silver_5  = 24 | bronze_5  = 40 | name_5  = {{GamesSport|Boxing|Format=d}}  | leading_5 = yes \n | gold_6  = 49 | silver_6  = 44 | bronze_6  = 45 | name_6  = {{GamesSport|Diving|Format=d}}  | leading_6 = yes \n | gold_7  = 37 | silver_7  = 42 | bronze_7  = 35 | name_7  = {{GamesSport|Gymnastics|Format=d}} \n | gold_8  = 33 | silver_8  = 32 | bronze_8  = 24 | name_8  = {{GamesSport|Rowing|Format=d}}  | leading_8 = yes \n | gold_9  = 23 | silver_9  = 2  | bronze_9  = 3  | name_9  = {{GamesSport|Basketball|Format=d}}  | leading_9 = yes \n | gold_10 = 21 | silver_10 = 6  | bronze_10 = 12 | name_10 = {{GamesSport|Tennis|Format=d}}  | leading_10 = yes \n | gold_11 = 19 | silver_11 = 23 | bronze_11 = 18 | name_11 = {{GamesSport|Sailing|Format=d}} \n | gold_12 = 16 | silver_12 = 21 | bronze_12 = 20 | name_12 = {{GamesSport|Cycling|Format=d}} \n | gold_13 = 16 | silver_13 = 16 | bronze_13 = 12 | name_13 = {{GamesSport|Weightlifting|Format=d}} \n | gold_14 = 14 | silver_14 = 11 | bronze_14 = 9  | name_14 = {{GamesSport|Archery|Format=d}} \n | gold_15 = 11 | silver_15 = 21 | bronze_15 = 20 | name_15 = {{GamesSport|Equestrian|Format=d}} \n | gold_16 = 6  | silver_16 = 2  | bronze_16 = 2  | name_16 = {{GamesSport|Beach volleyball|Format=d}}  | leading_16 = yes \n | gold_17 = 5  | silver_17 = 5  | bronze_17 = 6  | name_17 = {{GamesSport|Canoeing|Format=d}} \n | gold_18 = 5  | silver_18 = 2  | bronze_18 = 2  | name_18 = {{GamesSport|Synchronized swimming|Format=d}} \n | gold_19 = 4  | silver_19 = 2  | bronze_19 = 1  | name_19 = {{GamesSport|Football|Format=d}}  | leading_19 = yes \n | gold_20 = 3  | silver_20 = 3  | bronze_20 = 5  | name_20 = {{GamesSport|Golf|Format=d}}  | leading_20 = yes \n | gold_21 = 3  | silver_21 = 3  | bronze_21 = 4  | name_21 = {{GamesSport|Volleyball|Format=d}} \n | gold_22 = 3  | silver_22 = 1  | bronze_22 = 0  | name_22 = {{GamesSport|Softball|Format=d}}  | leading_22 = yes \n | gold_23 = 2  | silver_23 = 9  | bronze_23 = 14 | nam