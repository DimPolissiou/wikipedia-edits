n<ref name=weighton-112>{{cite news |url=https://www.theguardian.com/uk-news/2020/mar/31/hampshire-112-year-old-bob-weighton-world-oldest-man-guinness-record |title= Hampshire 112-year-old officially recognised as world's oldest man |newspaper=[[The Guardian]] |first=Steven |last=Morris |date=31 March 2020 |access-date=31 March 2020}}</ref>\n| align=center | M\n| rowspan=2 | 29 March 1908\n| Living\n| rowspan=2 | {{ayd | 29 March 1908}}\n| England\n| England\n|-bgcolor=99FF99\n| data-sort-value=\"Hocquard\" | Joan Eileen Hocquard<ref name=hocquard-112>{{cite news |url=https://www.bournemouthecho.co.uk/news/18343090.oldest-living-woman-uk-joan-hocquard-turns-112/ |title=Oldest living woman in UK Joan Hocquard turns 112 |newspaper=[[Bournemouth Daily Echo]] |first=Jason |last=Lewis |date=30 March 2020 |access-date=31 March 2020}}</ref>\n| align=center | F\n| Living\n| England\n| England\n\n|-bgcolor=99FF99\n| bgcolor=F9F9F9 | 48\n| data-sort-value=\"Davies\" | Violet Davies-Evans<ref>{{cite news |url=https://www.spaldingtoday.co.uk/news/sutterton-born-violet-celebrating-111th-birthday-in-spalding-tomorrow-9065859/ |title=Lincolnshire\u2019s oldest resident celebrates 111th birthday in Spalding tomorrow |first=Jeremy |last=Ransome |work=Spalding Today |date=29 March 2019 |access-date=6 April 2019}}</ref>\n| align=center | F\n| 30 March 1908\n| Living\n| {{ayd | 30 March 1908}}\n| England\n| England\n\n|-\n| 49\n| data-sort-value=\"Price\" | Annie Price<ref name=\"Supercentenarians who lived in the United Kingdom\"/>\n| align=center | F\n| 12 January 1886\n| 26 December 1997\n| {{ayd | 12 January 1886 | 26 December 1997}}\n| Wales\n| England\n\n|-\n| rowspan=2 | 50\n| data-sort-value=\"Turnbull\" | Annie Turnbull<ref name=\"GRG WSRL\"/>\n| align=center | F\n| 21 September 1898\n| 3 September 2010\n| rowspan=2 | {{ayd | 21 September 1898 | 3 September 2010}}\n| Scotland\n| Scotland\n|-\n| data-sort-value=\"Watson\" | Ellen Watson<ref name=\"GRG Deaths in 2011\"/>\n| alig