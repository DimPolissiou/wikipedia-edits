den;border-right:#aaaaaa hidden;\" | &nbsp;+\n| [[File:Batak sign U for Simalungun Su.svg|30px|link=|alt=-U]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | =&nbsp;\n| [[File:Batak Su-3.svg|30px|link=|alt=Su]]&nbsp;\n| sa + -u = su (Simalungun)\n|-\n| [[File:Batak Ya-1.svg|30px|link=|alt=Ya]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | &nbsp;+\n| [[File:Batak sign U.svg|30px|link=|alt=-U]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | =&nbsp;\n| [[File:Batak Yu-1.svg|30px|link=|alt=Yu]]&nbsp;\n| ya + -u = yu\n|-\n| [[File:Batak Ya-2.svg|30px|link=|alt=Ya]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | &nbsp;+\n| [[File:Batak sign U.svg|30px|link=|alt=-U]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | =&nbsp;\n| [[File:Batak Yu-2.svg|30px|link=|alt=Yu]]&nbsp;\n| ya + -u = yu (Simalungun)\n|-\n| [[File:Batak Nga.svg|30px|link=|alt=Nga]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | &nbsp;+\n| [[File:Batak sign U.svg|30px|link=|alt=-U]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | =&nbsp;\n| [[File:Batak Ngu-1.svg|30px|link=|alt=Ngu]]&nbsp;\n| nga + -u = ngu\n|-\n| [[File:Batak La-1.svg|30px|link=|alt=La]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | &nbsp;+\n| [[File:Batak sign U.svg|30px|link=|alt=-U]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | =&nbsp;\n| [[File:Batak Lu-1.svg|30px|link=|alt=Lu]]&nbsp;\n| la + -u = lu\n|-\n| [[File:Batak La-2.svg|30px|link=|alt=La]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | &nbsp;+\n| [[File:Batak sign U.svg|30px|link=|alt=-U]]\n| style=\"border-left:#aaaaaa hidden;border-right:#aaaaaa hidden;\" | =&nbsp;\n| [[File:Batak Lu-2.svg|30px|link=|alt=Lu]]&nbsp;\n| la + -u = lu (Simalungun)\n|-\n| [[File:Batak Ca-2, Nya.svg|30px|link=|alt=Nya]]\n| style=\"border-left:#aaaaaa hidden;bor