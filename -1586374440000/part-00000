12484\n|team1 = [[Walsall F.C.|Walsall]]\n|team2 = [[Port Vale F.C.|Port Vale]]\n|stadium = [[Bescot Stadium|Banks's Stadium]]\n|location = [[Bescot]]\n|referee = Anthony Backhouse\n|goals1 = [[Elijah Adebayo|Adebayo]] {{goal|15}}<br />[[Josh Gordon (footballer)|Gordon]] {{goal|58}}\n|goals2 = [[Leon Legge|Legge]] {{goal|12}}<br />[[Scott Burgess (footballer)|Burgess]] {{goal|36}}\n|attendance = 6,301\n|result = D\n}}\n{{football box collapsible\n|date = {{Start date|2020|02|29|df=y}}\n|time = 15:00 [[Greenwich Mean Time|GMT]]\n|round = \n|score = \n|report = https://www.saddlers.co.uk/news/2020/february/stevenage-v-walsall-postponed/\n|team1 = [[Stevenage F.C.|Stevenage]]\n|team2 = [[Walsall F.C.|Walsall]]\n|stadium = [[Broadhall Way|Lamex Stadium]]\n|location = [[Stevenage]]\n|referee = \n|goals1 = \n|goals2 = \n|attendance = \n|result = P\n|note = Match was postponed due to a waterlogged pitch.<ref>{{cite news |title=Stevenage v Walsall Postponed |url=https://www.saddlers.co.uk/news/2020/february/stevenage-v-walsall-postponed/ |accessdate=29 February 2020 |work=[[Walsall F.C.]]}}</ref>\n}}\n{{football box collapsible\n|date = {{Start date|2020|03|07|df=y}}\n|time = 15:00 [[Greenwich Mean Time|GMT]]\n|round = 36\n|score = 3\u20131\n|report = https://www.bbc.co.uk/sport/football/51685352\n|team1 = [[Walsall F.C.|Walsall]]\n|team2 = [[Exeter City F.C.|Exeter City]]\n|stadium = [[Bescot Stadium|Banks's Stadium]]\n|location = [[Bescot]]\n|referee = Tom Nield\n|goals1 = [[Rory Holden|Holden]] {{goal|3}}<br />[[Elijah Adebayo|Adebayo]] {{goal|71||90+2}}<br />[[Danny Guthrie|Guthrie]] {{yel|75}}<br />[[Josh Gordon (footballer)|Gordon]] {{yel|87}}\n|goals2 = [[Jayden Richardson|Richardson]] {{yel|33}}<br />[[Ryan Bowman|Bowman]] {{goal|51}} {{yel|90+3}}\n|attendance = 5,521\n|result = W\n}}\n{{football box collapsible\n|date = {{Start date|2020|03|14|df=y}}\n|time = 15:00 [[Greenwich Mean Time|GMT]]\n|round = \n|score = \n|report = \n|team1 = [[Macclesfield Town F.C.|Macc