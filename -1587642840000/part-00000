edrow | label5 = [[Lao language|Lao]]: | data5 = {{lang|lo|\u0eaa\u0eb0\u0ea1\u0eb2\u0e84\u0ebb\u0ea1\u0e9b\u0eb0\u0e8a\u0eb2\u0e8a\u0eb2\u0e94\u0ec1\u0eab\u0ec8\u0e87\u0ead\u0eb2\u0e8a\u0eb5\u0e95\u0eb0\u0ec0\u0ea7\u0eb1\u0e99\u0ead\u0ead\u0e81\u0eaa\u0ebd\u0e87\u0ec3\u0e95\u0ec9}}\n   | rowclass6 = mergedrow | label6 = [[Malay language|Malay]]: | data6 = {{lang|ms|Persatuan Negara-negara Asia Tenggara}}<ref>{{cite web|title=Piagam Persatuan Negara Asia Tenggara|trans-title=The ASEAN Charter|url=http://www.asean.org/storage/images/archive/AC-Malaysia.pdf|publisher=Association of Southeast Asian Nations|accessdate=10 January 2018|language=Malay}}</ref>\n   | rowclass7 = mergedrow | label7 = [[Standard Chinese|Chinese]]: | data7 = {{lang|zh|\u6771\u5357\u4e9e\u570b\u5bb6\u806f\u76df}}\n   | rowclass8 = mergedrow | label8 = [[Tamil language|Tamil]]: | data8 = {{lang|ta|\u0ba4\u0bc6\u0ba9\u0bcd\u0b95\u0bbf\u0bb4\u0b95\u0bcd\u0b95\u0bbe\u0b9a\u0bbf\u0baf \u0ba8\u0bbe\u0b9f\u0bc1\u0b95\u0bb3\u0bbf\u0ba9\u0bcd \u0b95\u0bc2\u0b9f\u0bcd\u0b9f\u0bae\u0bc8\u0baa\u0bcd\u0baa\u0bc1}}\n   | rowclass9 = mergedrow | label9 = [[Thai language|Thai]]: | data9 = {{lang|th|\u0e2a\u0e21\u0e32\u0e04\u0e21\u0e1b\u0e23\u0e30\u0e0a\u0e32\u0e0a\u0e32\u0e15\u0e34\u0e41\u0e2b\u0e48\u0e07\u0e40\u0e2d\u0e40\u0e0a\u0e35\u0e22\u0e15\u0e30\u0e27\u0e31\u0e19\u0e2d\u0e2d\u0e01\u0e40\u0e09\u0e35\u0e22\u0e07\u0e43\u0e15\u0e49}}\n   | rowclass10 = mergedrow | label10 = [[Vietnamese language|Vietnamese]]: | data10 = {{lang|vi|Hi\u1ec7p h\u1ed9i c\u00e1c qu\u1ed1c gia \u0110\u00f4ng Nam \u00c1}}<ref>{{cite web|title=Hi\u1ebfn ch\u01b0\u01a1ng c\u1ee7a Hi\u1ec7p h\u1ed9i c\u00e1c Qu\u1ed1c gia \u0110\u00f4ng Nam \u00c1|trans-title=The ASEAN Charter|url=http://www.asean.org/storage/images/archive/AC-Vietnam.pdf|publisher=Association of Southeast Asian Nations|accessdate=10 January 2018|language=Vietnamese}}</ref>\n   }}\n }}\n| linking_name                = the Association of Southeast Asian Nations\n| image_flag                = Flag of ASEAN.svg\n| image_symbol                = Seal of ASEAN.svg\n| symbol_type                = Emblem\n| motto                = \"One Vision, One Identity, One Community\"<ref>{{cite web|title=ASEAN Motto|url=http://www.asean.org/asean/about-asean/asean-motto|website=ASEAN.org|publisher=ASEAN|accessdate=9 May 2015}}</ref>\n| anthem                = \"[[The ASEAN Way]]\"\n| image_map                = Association of Southeast Asian Nations (orthographic projection).svg\n| map_width                = 300px\n| map_caption                = \n| admin_center_type                = Secretariat\n| admin_center                = [[Jakarta]]{{efn|name=\"adress\"}}\n| coordinates                = {{Coord|6|12|S|106|49|E|type:city}}\n| languages_type                = [[Working language]]\n| languages                = [[English language|English]]<ref>{{cite book|title=ASEAN Charter|publisher=Association of Southeast Asian Nations|pages=29|url=http://www.asean.org/archive/publications/ASEAN-Charter.pdf|quote='''Article 34.''' The working language of ASEAN shall be English.|access-date=29 October 2015|archive-url=https://web.archive.org/web/20151109180154/http://www.asean.org/archive/publications/ASEAN-Charter.pdf|archive-date=9 November 2015|url-status=dead|df=dmy-all}}</ref>\n| languages2_type                = Official languages<br>of contracting states\n| languages2                = {{collapsible list\n |titlestyle = background:transparent;text-align:left;font-weight:normal;\n |title = 10 languages\n | {{hlist |[[Burmese language|Burmese]]|[[English language|English]]|[[Filipino language|Filipino]]|[[Indonesian language|Indonesian]]|[[Khmer language|Khmer]]|[[Lao language|Lao]]|[[Malay language|Malay]]|[[Standard Chinese|Mandarin]]|[[Thai language|Thai]]|[[Tamil language|Tamil]]}}}}\n| membership_type                = [[Member states of the Association of Southeast Asian Nations|Membership]]\n| membership                = {{collapsible list\n |titlesty