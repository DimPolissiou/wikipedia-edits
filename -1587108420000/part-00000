                 = {{raise|0.2em|Yangzhou}}\n| official_name           = <!-- Official name in English if different form 'name' -->\n| other_name              = Yangchow\n| native_name             = {{lower|0.1em|{{nobold|{{lang|zh|\u626c\u5dde\u5e02}}}}}}\n| native_name_lang        = zh-hans\n| settlement_type         = [[Prefecture-level city]]\n| image_skyline           = The Five Pavilion bridge.jpg\n| image_alt               = \n| image_caption           = Five Pavilion Bridge at the [[Slender West Lake]]\n| nickname                = \n| motto                   = \n| image_map              = {{maplink|frame=yes|plain=yes|type=shape|stroke-width=2|stroke-color=#000000|zoom=7|frame-lat=32.71|frame-long=119.41}}\n| image_map1              = ChinaJiangsuYangzhou.png\n| map_alt1                = \n| map_caption1            = Yangzhou's location within Jiangsu province\n| pushpin_map             = China Jiangsu#Eastern China#China\n| pushpin_label_position  = \n| pushpin_map_alt         = \n| pushpin_map_caption     = Location in China\n| coordinates             = {{coord|32|24|N|119|25|E|display=inline,title}}\n| coor_pinpoint           = \n| coordinates_footnotes   = \n| subdivision_type        = [[List of sovereign states|Country]]\n| subdivision_name        = [[China|People's Republic of China]]\n| subdivision_type1       = [[Province (China)|Province]]\n| subdivision_name1       = [[Jiangsu]]\n| subdivision_type2       = [[Administrative divisions of the People's Republic of China#County level|County-level&nbsp;divisions]]\n| subdivision_name2       = 6 (3 Districts, 2 County-level cities, 1 County)\n| established_title       = \n| established_date        = \n| founder                 = \n| seat_type               = \n| seat                    = \n| government_footnotes    = \n| leader_party            = \n| leader_title            =[[Communist Party Chief]]\n| leader_name             = Xie Zhengyi ({{lang|zh-hans|\u8c22\u6b63\u4e49}})\n| leader_title1          