ralian Goldfields Open]]\n| align=\"center\" colspan=\"2\" style=\"color:#cccccc;\" | Not Held\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| colspan=\"4\" style=\"text-align:center;color:#ccc;\" | Not Held\n|-\n| style=\"background:#EFEFEF;\" | [[Shanghai Masters (snooker)|Shanghai Masters]]\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| align=\"center\" style=\"color:#cccccc;\" | A\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| align=\"center\" style=\"background:#afeeee;\" | [[2013 Shanghai Masters|1R]]\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| align=\"center\" style=\"background:#afeeee;\" | [[2015 Shanghai Masters|2R]]\n| align=\"center\" style=\"color:#cccccc;\" | A\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| colspan=\"2\" align=\"center\" style=\"color:#cccccc;\" | Non-Rank.\n|-\n| style=\"background:#EFEFEF;\" | [[Paul Hunter Classic]]\n| style=\"text-align:center; color:#ccc;\" | PA\n| colspan=\"6\" style=\"text-align:center; color:#ccc;\" | Minor-Ranking Event\n| align=\"center\" style=\"background:#ffebcd;\" | [[2016 Paul Hunter Classic|QF]]\n| align=\"center\" style=\"background:#afeeee;\" | [[2017 Paul Hunter Classic|2R]]\n| align=\"center\" style=\"background:#afeeee;\" | [[2018 Paul Hunter Classic|1R]]\n| align=\"center\" style=\"color:#cccccc;\" | NR\n|-\n| style=\"background:#EFEFEF;\" | [[Indian Open (snooker)|Indian Open]]\n| colspan=\"4\" align=\"center\" style=\"color:#cccccc;\" | Tournament Not Held\n| align=\"center\" style=\"color:#cccccc;\" | A\n| align=\"center\" style=\"color:#cccccc;\" | LQ\n| align=\"center\" style=\"color:#cccccc;\" | NH\n| align=\"center\" style=\"background:#afeeee;\" | [[2016 Indian Open|1R]]\n| align=\"center\" style=\"color:#cccccc;