rio Ciamberlini\n|goals1 = [[Vicente Arnoni|Arnoni]] {{Goal|90}}\n|goals2 = {{Goal|44}} [[Michele Andreolo|Andreolo]]<br />{{Goal|84}} [[Carlo Reguzzoni|Reguzzoni]]\n|result=W\n}}\n{{footballbox collapsible\n|date = 17 November 1935\n|round = 8\n|team1 = Bologna\n|team2 = [[A.S. Roma|Roma]]\n|score = 2-0\n|report=http://calcio-seriea.net/tabellini/1935/1887/\n|location = [[Bologna]]\n|stadium = [[Stadio Renato Dall'Ara|Stadio Littoriale]]\n|referee = Giuseppe Scarpi\n|goals1 = [[Raffaele Sansone|Sansone]] {{Goal|57}}<br />[[Francisco Fedullo|Fedullo]] {{Goal|78}}\n|result=W\n}}\n{{footballbox collapsible\n|date = 1 December 1935\n|round = 9\n|team1 = [[Sampierdarenese]]\n|team2 = Bologna\n|score = 0-0\n|report=http://calcio-seriea.net/tabellini/1935/1977/\n|location = [[Bologna]]\n|stadium = [[Stadio Renato Dall'Ara|Stadio Littoriale]]\n|referee = Achille Pizziolo\n|result=D\n}}\n{{footballbox collapsible\n|date = 8 December 1935\n|round = 10\n|team1 = Bologna\n|team2 = Alessandria\n|score = 1-1\n|report=http://calcio-seriea.net/tabellini/1935/1821/\n|location = [[Bologna]]\n|stadium = [[Stadio Renato Dall'Ara|Stadio Littoriale]]\n|referee = Generoso Dattilo\n|goals1 = [[Raffaele Sansone|Sansone]] {{Goal|40}}\n|goals2 = {{Goal|71}} [[Umberto Busani|Busani]]\n|result=D\n}}\n{{footballbox collapsible\n|date = 15 December 1935\n|round = 11\n|team1 = [[Torino F.C.|Torino]]\n|team2 = Bologna\n|score = 0-0\n|report=http://calcio-seriea.net/tabellini/1935/1913/\n|location = Torino\n|stadium = [[Stadio Filadelfia]]\n|referee = Gialma Bevilacqua\n|result = D\n}}\n{{footballbox collapsible\n|date = 22 December 1935\n|round = 12\n|team1 = Bologna\n|team2 = [[S.S. Lazio|Lazio]]\n|score = 2-0\n|report=http://calcio-seriea.net/tabellini/1935/1983/\n|location = [[Bologna]]\n|stadium = [[Stadio Renato Dall'Ara|Stadio Littoriale]]\n|referee = Giacomo Bertolio\n|goals1 = [[Gerardo Ottani|Ottani]] {{Goal|5}}<br />[[Alcide Ivan Violi|Violi]] {{Goal|75}}\n|result = W\n}}\n{{footballbox 