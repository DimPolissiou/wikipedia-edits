ne Worlds}}'']]\n|-\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2005}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2006}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2007}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2008}}</span>\n! colspan=\"2\" style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2009}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2010}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2011}}</span>\n! colspan=\"2\" style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2012}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2013}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2014}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2016}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2017}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2018}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2019}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2020}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2010}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2011}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2012}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2013}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2014}}</span>\n! colspan=\"2\" style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2015}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2016}}</span>\n! style=\"background:ivory;\"| <span style=\"color: black;\">{{small|2017}}</span>\n! sty