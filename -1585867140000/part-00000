d]]\n| name_FRI = [[Frigg Oslo FK|Frigg]]\n| name_HAM = [[Hamarkameratene|HamKam]]\n| name_H\u00d8D = [[IL H\u00f8dd|H\u00f8dd]]\n| name_LYN = [[Lyn Fotball|Lyn]]\n| name_ROS = [[Rosenborg BK|Rosenborg]]\n| name_SRP = [[Sarpsborg FK|Sarpsborg]]\n| name_STM = [[Str\u00f8msgodset Toppfotball|Str\u00f8msgodset]]\n| name_VIK = [[Viking FK|Viking]]\n\n| match_BRA_FRE = 1-1\n| match_BRA_FRI = 3-1\n| match_BRA_HAM = 0-3\n| match_BRA_H\u00d8D = 2-2\n| match_BRA_LYN = 0-1\n| match_BRA_ROS = 0-1\n| match_BRA_SRP = 1-3\n| match_BRA_STM = 0-0\n| match_BRA_VIK = 1-0\n\n| match_FRE_BRA = 2-0\n| match_FRE_FRI = 7-1\n| match_FRE_HAM = 4-0\n| match_FRE_H\u00d8D = 0-0\n| match_FRE_LYN = 3-2\n| match_FRE_ROS = 2-1\n| match_FRE_SRP = 2-0\n| match_FRE_STM = 3-3\n| match_FRE_VIK = 2-2\n\n| match_FRI_BRA = 1-0\n| match_FRI_FRE = 3-4\n| match_FRI_HAM = 1-0\n| match_FRI_H\u00d8D = 0-5\n| match_FRI_LYN = 1-3\n| match_FRI_ROS = 1-1\n| match_FRI_SRP = 0-4\n| match_FRI_STM = 0-3\n| match_FRI_VIK = 1-0\n\n| match_HAM_BRA = 2-0\n| match_HAM_FRE = 0-0\n| match_HAM_FRI = 1-0\n| match_HAM_H\u00d8D = 0-0\n| match_HAM_LYN = 1-1\n| match_HAM_ROS = 1-1\n| match_HAM_SRP = 0-0\n| match_HAM_STM = 4-1\n| match_HAM_VIK = 3-1\n\n| match_H\u00d8D_BRA = 0-0\n| match_H\u00d8D_FRE = 0-0\n| match_H\u00d8D_HAM = 4-1\n| match_H\u00d8D_FRI = 0-2\n| match_H\u00d8D_ROS = 0-3\n| match_H\u00d8D_SRP = 1-2\n| match_H\u00d8D_LYN = 1-0\n| match_H\u00d8D_STM = 0-1\n| match_H\u00d8D_VIK = 1-3\n\n| match_LYN_BRA = 3-1\n| match_LYN_FRE = 1-0\n| match_LYN_FRI = 7-1\n| match_LYN_HAM = 0-0\n| match_LYN_H\u00d8D = 1-0\n| match_LYN_ROS = 2-2\n| match_LYN_SRP = 2-1\n| match_LYN_STM = 0-1\n| match_LYN_VIK = 2-1\n\n| match_ROS_BRA = 0-1\n| match_ROS_FRE = 1-0\n| match_ROS_FRI = 2-1\n| match_ROS_HAM = 0-0\n| match_ROS_H\u00d8D = 4-1\n| match_ROS_LYN = 0-0\n| match_ROS_SRP = 3-0\n| match_ROS_STM = 0-0\n| match_ROS_VIK = 1-0\n\n| match_SRP_BRA = 3-3\n| match_SRP_FRE = 1-0\n| match_SRP_FRI = 7-1\n| match_SRP_HAM = 0-1\n| match_SRP_H\u00d8D 