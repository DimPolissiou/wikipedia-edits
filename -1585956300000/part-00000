r=#e0e0e0| ''[[#AUT|Austria]]'' / ''[[#HUN|Hungary]]'' ||colspan=6 bgcolor=#e0e0e0| ''[[#YUG|Yugoslavia]]'' || 1 || 3 || 1 || || || 1 || ||  '''4'''\n|-\n|align=left| {{flagIOCteam|SOL}} ||colspan=7 bgcolor=#e0e0e0| || || 1 || || || || || || || || '''1'''\n|-\n|align=left| {{flagIOCteam|RSA}} ||bgcolor=#e0e0e0| || || || ||colspan=5 bgcolor=#e0e0e0| || 2 || 3 || 2 || 1 || 1 || 1 || || '''6'''\n|-\n|align=left|<span id=\"URS\"></span> ''{{flagIOCteam|URS}}''</span> || rowspan=2 colspan=3 bgcolor=#e0e0e0| ''[[Russian Empire at the Olympics|Russian Empire]]'' ||bgcolor=#e0e0e0| || 6 || 3 ||bgcolor=#ccccff| 4 ||bgcolor=#e0e0e0| || 6 ||bgcolor=#e0e0e0|''<small>[[#EUN|EUN]]</small>''|| rowspan=2 colspan=6 bgcolor=#e0e0e0|  || '''4'''\n|-\n|align=left|<span id=\"EUN\"></span> ''{{flagIOCteam|EUN|1992 Summer}}'' ||bgcolor=#e0e0e0|''<small>[[#URS|URS]]</small>'' ||colspan=5 bgcolor=#e0e0e0| ''[[#URS|Soviet Union]]'' || 6 || '''1'''\n|-\n|align=left| {{flagIOCteam|ESP}} || ||colspan=2 bgcolor=#e0e0e0| || || 2 || || 2 || 4 || 4 ||bgcolor=#ccccff| 4 || 1 || 1 || 2 || 1 || 2 ||4 || '''11'''\n|-\n|align=left| {{flagIOCteam|SWE}} || ||bgcolor=#e0e0e0| || || || 5 || 4 || 3 || 5 || 6 || 3 || 6 || 6 || 3 || 1 || 1 ||1 || '''12'''\n|-\n|align=left| {{flagIOCteam|SUI}} || || || || || 4 || || 4 || 3 || 2 || || || || || 1 || 2 || || '''6'''\n|-\n|align=left| {{flagIOCteam|TJK}} ||colspan=3 bgcolor=#e0e0e0| ''[[Russian Empire at the Olympics|Russian Empire]]'' ||colspan=6 bgcolor=#e0e0e0| ''[[#URS|Soviet Union]]'' ||bgcolor=#e0e0e0|''<small>[[#EUN|EUN]]</small>'' || || || 1 || 1 ||  || || '''2'''\n|-\n|align=left| {{flagIOCteam|THA}} || colspan=4 bgcolor=#e0e0e0| || || 3 ||bgcolor=#e0e0e0| || 2 || || || || || || || 1 ||1 || '''4'''\n|-\n|align=left| {{flagIOCteam|TGA}} || colspan=7 bgcolor=#e0e0e0| || || || || || || 1 || ||  ||2 || '''2'''\n|-\n|align=left| {{flagIOCteam|TUR}} || colspan=2 bgcolor=#e0e0e0| || ||bgcolor=#e0e0e0| || || ||bgcolor=#e0e0e0| || 2 || 6 || 6 || 4 || 6 || 4 || 2 || 1 || 2||  '''9'''\n|-\n|align=left| {{flagIOCteam|UGA}} || colspan=4 bgcolor=#e0e0e0| || ||bgcolor=#e0e0e0| || || || || || || 1 || || || || ||  '''1'''\n|-\n|align=left| {{flagIOCteam|UKR}} || colspan=3 bgcolor=#e0e0e0| ''[[Russian Empire at the Olympics|Russian Empire]]'' ||colspan=6 bgcolor=#e0e0e0| ''[[#URS|Soviet Union]]'' ||bgcolor=#e0e0e0|''<small>[[#EUN|EUN]]</small>'' || 6 || 6 || 6 || 5 || 6 || 4|| '''6'''\n|-\n|align=left| {{flagIOCteam|USA}} || ||bgcolor=#ccccff| 29 || 1 || || 6 || 4 ||bgcolor=#e0e0e0| ||bgcolor=#ccccff| 6 || 6 || 5 ||bgcolor=#ccccff| 6 || 6 || 6 || 5 || 6 ||4 ||  '''13'''\n|-\n|align=left| {{flagIOCteam|VAN}} || colspan=8 bgcolor=#e0e0e0| || || || || 1 || || ||  || || '''1'''\n|-\n|align=left| {{flagIOCteam|VEN}} || colspan=4 bgcolor=#e0e0e0| || || || || || || || || || || 1 || 2 || 2|| '''3'''\n|-\n|align=left|<span id=\"YUG\"></span> {{flagIOCteam|YUG}} || colspan=3 bgcolor=#e0e0e0| || || || 1 || 1 || || ||colspan=7 bgcolor=#e0e0e0| || '''2'''\n|-\n|align=left| {{flagIOCteam|ZIM}} || colspan=6 bgcolor=#e0e0e0| || 1 || || 4 || || || || || || ||1 || '''3'''\n|- bgcolor=lightgray\n|colspan=30|\n|-\n! No. of nations || 3 || 1 || 3 || 3 || 27 || 24 || 25 || 35 || 41 || 44 || 41 || 46 || 43 || 49 || 55 || 56 || '''98'''\n|-\n! No. of archers || 153 || 29 || 57 || 30 || 95 || 64 || 67 || 109 || 146 || 135 || 125 || 128 || 128 ||128|| 128|| 128 || \n|-\n! Year || [[Archery at the 1900 Summer Olympics|00]]|| [[Archery at the 1904 Summer Olympics|04]]|| [[Archery at the 1908 Summer Olympics|08]]|| [[Archery at the 1920 Summer Olympics|20]] || [[Archery at the 1972 Summer Olympics|72]] || [[Archery at the 1976 Summer Olympics|76]] || [[Archery at the 1980 Summer Olympics|80]] || [[Archery at the 1984 Summer Olympics|84]] || [[Archery at the 1988 Summer Olympics|88]] || [[Archery at the 1992 Summer Olympics|92]] || [[Archery at the 1996 Summer Olympics|96]] || [[Archery at the 2000 Summer Olympics|00]] || [[Archery at the 2004 Summer Olympics|04]]